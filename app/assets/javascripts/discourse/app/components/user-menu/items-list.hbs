{{#if this.loading}}
  <div class="spinner-container">
    <div class="spinner"></div>
  </div>
{{else if this.items.length}}
  <ul>
    {{#each this.items as |notification|}}
      {{#if notification.userMenuComponent}}
        <notification.userMenuComponent @notification={{notification}}/>
      {{else}}
        <UserMenu::DefaultNotificationItem @notification={{notification}}/>
      {{/if}}
    {{/each}}
  </ul>
  <div class="panel-body-bottom">
    <a class="btn btn-default btn-icon no-text show-all" href={{this.showAllHref}} title={{this.showAllTitle}}>
      {{d-icon "chevron-down" aria-label=this.showAllTitle}}
    </a>
    {{#if this.showDismiss}}
      <button
        class="btn btn-default notifications-dismiss btn-icon-text"
        title={{this.dismissTitle}}
        {{on "click" this.dismissButtonClick}}
      >
        {{d-icon "check"}}
        {{i18n "user.dismiss"}}
      </button>
    {{/if}}
  </div>
{{else}}
  {{! TODO: blank page syndrome}}
  <h1>nothing here bro</h1>
{{/if}}
